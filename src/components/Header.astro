---
import Navigation from './Navigation.astro';
import AnimatedStudio10BLogo from './AnimatedStudio10BLogo.astro';
---

<header class="fixed top-0 left-0 w-full z-50 bg-black bg-opacity-90 backdrop-blur-sm py-6 transition-all duration-300">
  <div class="container mx-auto px-4 md:px-8 max-w-screen-xl">
    <div class="flex justify-between items-center">
      <a href="/" class="block">
        <AnimatedStudio10BLogo />
      </a>
      <Navigation />
    </div>
  </div>
</header>

