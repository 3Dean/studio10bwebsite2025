---
import ProjectCard from './ProjectCard.astro';
import Button from './Button.astro';

interface Project {
  id: string;
  title: string;
  imageUrl: string;
  slug: string;
}

interface Props {
  title: string;
  description: string;
  projects: Project[];
  demoUrl?: string;
  showButton?: boolean;
  buttonText?: string;
  buttonUrl?: string;
}

const {
  title,
  description,
  projects,
  showButton = true,
  buttonText = "View Demo",
  buttonUrl = "/projects"
} = Astro.props;
---

<section class="bg-gray-900 text-white py-24">
  <div class="container mx-auto px-4 md:px-8 max-w-screen-xl">
    <div class="flex justify-between items-start mb-12 md:flex-row flex-col gap-6">
      <div class="md:max-w-3xl">
        <h2 class="text-4xl font-bold mb-4">{title}</h2>
        <p class="text-lg opacity-80 leading-relaxed">{description}</p>
      </div>
      {showButton && (
        <div class="flex-shrink-0">
          <Button href={buttonUrl} variant="outline">{buttonText}</Button>
        </div>
      )}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <ProjectCard 
          title={project.title}
          imageUrl={project.imageUrl}
          url={`/projects/${project.slug}`}
        />
      ))}
    </div>
  </div>
</section>