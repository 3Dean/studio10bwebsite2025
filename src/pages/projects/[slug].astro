  category: string;
  client: string;
  year: string;
  description: string;
  challenge: string;
  solution: string;
  features: string[];
  mainImage: string;
  galleryImages: string[];
  projectUrl?: string;

  // Simplified video properties
  video?: {
    url: string;
    thumbnail?: string;
    title?: string;
    description?: string;
    isExternal?: boolean;
  };
